<div class="page-header">
	<h1>Edit Organization</h1>
</div>
<% if @organization.errors.any? %>
<div class="alert alert-danger">
	<h2>This form contains <%= pluralize(@organization.errors.count, "error") %>.</h2>
	
	<ul>
		<% @organization.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="admin-category-form">
	<%= form_for :organization, url: admin_organization_path(@organization), method: :patch do |f| %>
	<%= render 'form', :f => f %>
	<% end %>
</div>