<div class="page-header">
	<h1>Menu for week <%= link_to 'Add day menu', new_admin_week_menu_path, class: "btn btn-success page-header-button" %></h1>
</div>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Items</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @weekdays.each do |n| %>
			<tr>
				<td><%= n.name %></td>
				<td>count: <%= n.items.count %></td>
				<td class="col-md-1">
					<%= link_to admin_week_menu_path(n), class: "show_link" do %>
					<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
					<% end %>
					<%= link_to edit_admin_week_menu_path(n) do %>
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					<% end %>
					<%= link_to admin_week_menu_path(n), class: "destroy_link", method: :delete,
					data: { confirm: 'Are you sure?' } do %>
					<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
					<% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
